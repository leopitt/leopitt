{#
/**
 * @file
 * 2 column layout.
 */
#}

<div class="page page-columns-1 container layout-outer-wrapper columns is-centered">
  <div class="column is-two-thirds">
    <div class="page-title">
      {{ content.title }}
    </div>
    {% if content.preface|render|striptags|trim %}
    <div class="page-preface">
      {{ content.preface }}
    </div>
    {% endif %}
    {% if content.main|render|striptags|trim %}
    <div class="page-main">
      {{ content.main }}
    </div>
    {% endif %}
    {% if content.secondary|render|striptags|trim %}
    <div class="page-secondary">
      {{ content.secondary }}
    </div>
    {% endif %}
  </div>
</div>
